<html>
	<head>
		<title>Batteraj Recycle Bin</title>
		<link rel="stylesheet" href="/static/style.css" type="text/css" />
		<script src="/static/jquery-1.3.2.min.js" type="text/javascript"></script>
		<script src="/static/custom.js" type="text/javascript"></script>
	</head>
	<body>
		<div id="wrapper">
			<div id="header">
				<div id="title"><%= Core::APPLICATION_LONG_NAME %> version <%= Core::API_MAJOR_VERSION %>.<%= Core::API_MINOR_VERSION %></div>
			</div> 
			
			<div class="box">
				<a href="/status">Status page</a>
			</div>
			<div class="box">
				<table class="box">
					<thead>
						<th>ID</th>
						<th>DATE</th>
						<th>SCON</th>
						<th>SCHAN</th>
						<th>SRC</th>
						<th>DCON</th>
						<th>DCHAN</th>
						<th>DST</th>
						<th>PRI</th>
						<th>EXCERPT</th>
					</thead>
					<tbody>
					<% @recycle_bin.each do |message| %>
						<tr>
							<td><a href="/status/msg/<%= message.id %>"><%= message.id %></a></td>
							<td><%= message.date.to_s %></td>
							<td><%= message.source_connector.name %></td>
							<td><%= message.source_channel.to_s %></td>
							<td><%= message.source.to_s %></td>
							<td><%= message.destination_connector.name.to_s unless message.destination_connector.nil? %></td>
							<td><%= message.destination_channel.to_s %></td>
							<td><%= message.destination.to_s %></td>
							<td><%= message.priority %></td>
							<td><%= message.content[0..32] %>..</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</body>
</html>
